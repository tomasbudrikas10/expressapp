extends base.pug
block content
    div(class="w-1/3 mx-auto text-center py-16 bg-yellow-100 my-16")
        form(action="/login" method="POST")
            h3(class="text-2xl")= "Log In"
            input(type="text", name="name", placeholder="Enter Username" class="my-2 text-center")
            br
            input(type="password", name="password", placeholder="Enter Password" class="my-2 text-center")
            br
            input(type="submit", name="submit", value="Log In" class="my-2 text-center bg-white rounded-lg py-2 px-16 mt-8")  